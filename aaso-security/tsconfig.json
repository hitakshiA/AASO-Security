{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./out",  
        "rootDir": "./src",
        "sourceMap": true,
        "resolveJsonModule": true,
        "types": ["node", "jest", "vscode"],  
        "paths": {
            "@/*": ["./src/*"]
        },
        "baseUrl": "." 
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}